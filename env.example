# Google Cloud App Engine Configuration
NODE_ENV=production
PORT=8080

# OpenSearch Configuration (Managed Service)
OPENSEARCH_URL=https://your-opensearch-endpoint.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your-secure-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Google Cloud Storage (Optional - for file storage)
GCS_BUCKET_NAME=your-document-bucket
GCS_PROJECT_ID=your-gcp-project-id

# Security Configuration
CORS_ORIGIN=https://your-app-domain.com
SESSION_SECRET=your-session-secret-key

# Monitoring and Logging
ENABLE_LOGGING=true
LOG_LEVEL=info

# Performance Configuration
CACHE_TTL=3600
MAX_CONCURRENT_UPLOADS=5 