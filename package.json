{
  "name": "opensearch-document-search",
  "version": "1.0.0",
  "description": "A modern document search application with OpenSearch, React, and Node.js",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:prod": "npm run build && npm run copy-server",
    "copy-server": "cp -r server client/build/ && cp package.json client/build/",
    "deploy": "npm run build:prod && gcloud app deploy",
    "deploy:staging": "npm run build:prod && gcloud app deploy --version staging",
    "deploy:prod": "npm run build:prod && gcloud app deploy --version prod",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "keywords": [
    "opensearch",
    "elasticsearch",
    "document-search",
    "react",
    "nodejs",
    "typescript",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@opensearch-project/opensearch": "^2.4.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "node-rake": "^1.0.0",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shotsan/opensearch.git"
  },
  "bugs": {
    "url": "https://github.com/shotsan/opensearch/issues"
  },
  "homepage": "https://github.com/shotsan/opensearch#readme"
}
